 * @author mhd57_000
 */
import java.util.*;
public class Neuron {
    double value;
	//Does it need to know its position?
    ArrayList<Integer> position;
	
    public Neuron (ArrayList<Integer> pos) {
	
        value = 0.0;
	position = pos;

    }

    public Neuron (ArrayList<Integer> pos, double v) {
    
        value = v;
        position = pos;
    
    }
    
    public double getValue () {
    
        return value;
    
    }

    public void updateValue (double v) {

        value = v;
	
    }

    public ArrayList<Integer> getPos () {
    
        return position;
	
    }

}
